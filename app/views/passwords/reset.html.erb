<h1>Reset Password</h1>
<%= form_with url: :password, method: :put do |f| %>
  <%= f.hidden_field :token, value: params[:token] %>
  <div class='form-floating mb-3'>
    <%= f.password_field :new_password, class: "form-control" %>
    <%= f.label :new_password %>
  </div>
  <div class="d-grid">
    <%= f.submit "Reset Password", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
