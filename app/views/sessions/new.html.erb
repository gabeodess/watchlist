<h1>Sign In</h1>

<%= form_with url: :session, html: {class: 'mb-3'} do |f| %>
  <div class='mb-3'>
    <%= f.email_field :email, placeholder: :email, value: params[:email], class: 'form-control' %>
  </div>
  <div class='mb-3'>
    <%= f.password_field :password, placeholder: :password, value: params[:password], class: 'form-control' %>
  </div>
  <div class="d-grid gap-2">
    <%= f.submit "Sign In", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>

<div class="d-flex justify-content-between">
  <%= link_to "Sign Up", :new_user %>
  <%= link_to "Forgot Password", :new_password %>
</div>
